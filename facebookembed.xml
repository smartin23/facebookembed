<?xml version="1.0" encoding="utf-8"?>
<extension version="1.7" type="plugin" group="content">
	<name>Content - Facebook Album Embedding</name>
	<author>Stephane Martin</author>
	<creationDate>Octobre 2012</creationDate>
	<copyright>Copyright (C) 2012 Stephane Martin. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-3.0.html GNU/GPL</license>
	<authorEmail>stephane.martin23@gmail.com</authorEmail>
	<authorUrl>www.lagrangeweb.fr</authorUrl>
	<version>1.0</version>
	<description>Replaces facebbok_albumid=id tag in content with a list of facebook album photos</description>
    
    <config>
		<fields name="params">
			<fieldset name="basic">
				
				<field name="fan_id" type="text" size="20" default="" label="Facebook Fan Page ID" description=""/>
				<field name="app_id" type="text" size="20" default="" label="Facebook Application ID" description=""/>
				<field name="secret_key" type="text" size="48" default="" label="Facebook Secret Key" description=""/>
				<field name="nb_post" type="text" size="12" default="" label="Number of Facebook Posts displayed" description=""/>
			</fieldset>
		</fields>
	</config> 
	<files>
		<filename plugin="facebookembed">facebookembed.php</filename>
	</files>
</extension>
